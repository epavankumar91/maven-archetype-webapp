/* groovylint-disable LineLength */
pipeline {
    agent any
    tools {
        jdk 'jdk1.8.0'
        git 'git'
        maven 'maven3.8.2'
    }
    parameters {
        password (name: 'AWS_ACCESS_KEY_ID')
        password (name: 'AWS_SECRET_ACCESS_KEY')
    }
    environment {
        VER = VersionNumber([versionNumberString : '${BUILD_YEAR}.${BUILD_MONTH}.${BUILD_DAY}.RRTECH${BUILD_NUMBER}', projectStartDate : '2021-08-08'])
        imageName = 'jenkinsnew'
        dockerRegistry = 'Dockerusername'
        AWS_ACCESS_KEY_ID     = credentials('jenkins-aws-secret-key-id')
        AWS_SECRET_ACCESS_KEY = credentials('jenkins-aws-secret-access-key')
    }
    
    stages {
        stage('Build Started') {
            steps {
                echo "Running ${env.BUILD_ID} on ${env.JENKINS_URL}"
            }
        }
        stage('Cloning our Git') { 
            steps { 
                git 'https://github.com/rajkumar2289/maven-archetype-webapp.git' 
            }
        } 
        stage('list Git') { 
            steps { 
                sh 'ls -lart' 
                sh 'cat VER'
            }
        }
        stage ('Checkout repo') {
            steps {
                script {
                    currentBuild.displayName = VER
                }
                checkout(
                    [$class: 'GitSCM', 
                    branches: [[name: '*/master']], 
                    extensions: [],
                    userRemoteConfigs: [
                        [credentialsId: '6618d800-7b1a-4596-83d5-215cc0e8ada4',
                         url: 'https://github.com/rajkumar2289/maven-archetype-webapp.git']
                        ]
                    ]
                )
            }
        }
        stage('list Git 1') { 
            steps { 
                sh 'ls -lart' 
                sh 'cat VER'
            }
        }
        stage('Infra Provision') { 
            steps { 
                sh 'terraform init'
            }
        }   
    }
}
