/* groovylint-disable LineLength */
pipeline {
    agent any
    tools {
        jdk 'jdk1.8.0'
        git 'git'
        maven 'maven3.8.2'
    }
    environment {
        VER = VersionNumber([versionNumberString : '${BUILD_YEAR}.${BUILD_MONTH}.${BUILD_DAY}.RRTECH${BUILD_NUMBER}', projectStartDate : '2021-08-08'])
        imageName = 'jenkinsnew'
        dockerRegistry = 'Dockerusername'
        AWS_ACCESS_KEY_ID     = credentials('jenkins-aws-secret-key-id1')
        AWS_SECRET_ACCESS_KEY = credentials('jenkins-aws-secret-access-key1')
    }
    
    stages {
        stage('Build Started') {
            steps {
                echo "Running ${env.BUILD_ID} on ${env.JENKINS_URL}"
            }
        }
        stage('Cloning our Git') { 
            steps { 
                git 'https://github.com/rajkumar2289/maven-archetype-webapp.git' 
            }
        } 
        stage('list Git') { 
            steps { 
                sh 'ls -lart' 
                sh 'echo $VER'
            }
        }
        stage('Infra Provision') { 
            steps { 
                sh '''terraform init
                    terraform plan -out=terraformDevOps.plan
                    terraform apply --auto-approve
                    '''
            }
        }
        stage('Invoke Ansible') { 
            steps { 
                ansiblePlaybook credentialsId: 'ansible-ssh-key', disableHostKeyChecking: true, installation: 'ansible-2.9.24', inventory: 'dev.env', playbook: 'tomcat.yml'
            }
        }
    }
}
